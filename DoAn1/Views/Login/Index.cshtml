
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <br /><br /><br /><br />
    <div class="warning-text">@ViewBag.Messenge</div>

    <div>
        @using (Html.BeginForm("LoginCheck", "Login", FormMethod.Post))
        {
            <table class="table1" width="500" height="200" border="2" cellpadding="8" align="center">
                <tr>
                    <th colspan="2"> ĐĂNG NHẬP </th>
                </tr>
                <tr>
                    <td> Tài Khoản </td>
                    <td>
                        <input type="text" placeholder="nhập tài khoản" size="40" name="TaiKhoan">
                    </td>
                </tr>
                <tr>
                    <td> Mật Khẩu </td>
                    <td>
                        <input type="password" placeholder="nhập mật khẩu" size="40" name="MatKhau">
                    </td>
                </tr>
                <tr>
                <tr>
                    <td colspan="2" align="center">
                        <button type="submit">Đăng Nhập</button>
                        <br />
                        <br />
                        <a href="/Login/Register" class="button">ĐĂNG KÝ</a>
                    </td>
                </tr>

            </table>

        }
    </div>

    <div style="height:455px"></div>
</body>